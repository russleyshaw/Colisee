{
  "name": "colisee",
  "version": "1.0.0",
  "description": "",
  "main": "src/head_server/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "lint": "eslint src/ test/",
    "fix": "eslint --fix src/ test/",

    "portainer": "./runPortainer.sh",

    "docs": "npm-run-all docs:*",
    "docs:js": "rm -rf docs/js/ && jsdoc src/ -t node_modules/minami -r -c doc.json -d docs/js/",
    "docs:api": "rm -rf docs/api/ && apidoc -i src/ -o docs/api/",

    "test": "npm-run-all lint test:*",
    "test:unit": "NODE_ENV=test mocha --recursive test/unit",
    "test:integration": "NODE_ENV=test mocha --recursive test/integration",

    "setup": "npm run setup:npm && npm run setup:bower && npm run setup:db && npm run setup:tmp",
    "setup:npm": "rm -rf node_modules/ && npm install",
    "setup:bower": "rm -rf bower_components/ && bower install",
    "setup:db": "./db/setupDevelopmentDb.sh",
    "setup:tmp": "./setupTmpDirs.sh",
    "setup:webpack": "webpack",

    "run:head": "node src/head_server/main.js",
    "watch:head": "nodemon --watch src/head_server/ --ext html,js,jsx --exec 'npm run run:head'",

    "run:build": "node src/build_server/api.js",
    "watch:build": "nodemon --watch src/build_server/ --ext html,js,jsx --exec 'npm run run:build'",

    "run:play": "node src/play_server/main.js",
    "watch:play": "nodemon --watch src/play_server/ --ext html,js --exec 'npm run run:play'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/russleyshaw/Colisee.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/russleyshaw/Colisee/issues"
  },
  "homepage": "https://github.com/russleyshaw/Colisee#readme",
  "devDependencies": {
    "apidoc": "^0.16.1",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "css-loader": "^0.25.0",
    "bower": "^1.7.9",
    "eslint": "^3.5.0",
    "file-loader": "^0.9.0",
    "jsdoc": "^3.4.0",
    "minami": "^1.1.1",
    "mocha": "^3.0.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.0.0",
    "should": "^11.1.0",
    "watch": "^1.0.1"
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.3"
  },
  "dependencies": {
    "async": "^2.0.1",
    "body-parser": "^1.15.2",
    "child_process": "^1.0.2",
    "config": "^1.21.0",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "handlebars": "^4.0.5",
    "knex": "^0.12.2",
    "lodash": "^4.16.6",
    "mocha": "^3.0.2",
    "pg": "^6.1.0",
    "querystring": "^0.2.0",
    "request": "^2.74.0"
  }
}
